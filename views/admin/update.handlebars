{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="mt-3">
    <h1>Atualizar Usuário</h1>
</div>

<div class="card">
    <div class="card-body">
        <form action="/admin/update/user" method="post">
            <div class="form-group mt-2">
                <input type="hidden" name="id" id="id" class="form-control" value="{{populate.id}}">
            </div>
            <div class="form-group mt-3">
                <label for="login">Login</label>
                <input type="text" name="login" id="login" class="form-control" value="{{populate.user}}" placeholder="Nome de usuário" required>
            </div>
            <div class="form-group mt-3">
                <label for="senha">Senha</label>
                <input type="password" name="senha" id="senha" class="form-control" value="{{populate.pass}}" placeholder="Senha de usuário" required>
            </div>
                <button type="submit" class="mt-4 btn btn-md btn-success">Atualizar</button>
        </form>
    </div>
</div>
