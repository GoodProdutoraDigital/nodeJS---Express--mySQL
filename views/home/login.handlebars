{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="mt-3">
    <h1>Efetuar Login</h1>
</div>

<div class="card">
    <div class="card-body">
        <form action="/user/login" method="post"> 
            <div class="form-group mt-3">
                <label for="login">Login</label>
                <input type="text" name="user" id="user" class="form-control" placeholder="Nome de usuário" required>
            </div>
            <div class="form-group mt-3">
                <label for="senha">Senha</label>
                <input type="password" name="pass" id="pass" class="form-control" placeholder="Senha de usuário" required>
            </div>
                <button type="submit" class="mt-4 btn btn-md btn-success">Acessar</button>
        </form>
    </div>
</div>
